{
    "compileOnSave": false,
    "compilerOptions": {
        "inlineSourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist/eng",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2016"
        ]
    },
    "exclude": [
        "node_modules",
        "lib",
        "bin",
        "dist"
    ],
    "include": [
        "src/eng/**/*"
    ]
}